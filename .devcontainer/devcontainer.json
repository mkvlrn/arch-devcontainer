{
  "name": "devcontainer-${localWorkspaceFolderBasename}",
  "image": "ghcr.io/mkvlrn/arch-devcontainer:latest",
  "remoteUser": "dev",
  "updateRemoteUserUID": true,
  "workspaceFolder": "/code/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/code/${localWorkspaceFolderBasename},type=bind",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "runArgs": ["--name=devcontainer-${localWorkspaceFolderBasename}"],
  "overrideCommand": false
}
